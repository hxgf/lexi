{
  "name": "LEXXI",
  "version": "1.0.0",
  "description": "Foundation for quickly developing web applications with Express (and friends)",
  "main": "app.js",
  "scripts": {
    "lint": "jshint app/controllers/",
    "build": "node build.js",
    "serve": "nodemon --watch app/compiled/scripts-server.js",
    "watch": "onchange app/controllers/**/*.js -- npm run build",
    "serve:watch": "parallelshell 'npm run serve' 'npm run watch'",
    "dev": "npm run lint && npm run build && npm run serve:watch"
  },
