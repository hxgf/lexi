    "express-handlebars": "3.0.0",
    "file-stream-rotator": "0.0.7",
    "fquery": "0.16.4",
    "jshint": "^2.9.4",
    "knox": "0.9.2",
    "lexxi-handlebars": "^0.1.2",
    "lexxi-utilities": "^0.1.3",
    "jimp": "0.2.27",
    "lodash": "4.17.3",
    "mathjs": "3.8.1",
    "mime": "1.3.4",
    "moment": "2.17.1",
    "mongoose": "4.7.5",
    "mongoose-query-paginate": "1.0.3",
    "morgan": "1.7.0",
    "multer": "1.2.1",
